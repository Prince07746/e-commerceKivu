<style>
  .bar-de-resultat {
    margin-left: 20%;
    margin-right: 10%;
    width: 70%;
    height: 400px;
    overflow: scroll;
    top: 25vh;
    left: 10vh;
    min-height: 50px;
    background-color: white;
    border-radius: 20px;
    border: none;
    z-index: 999;
    display: none;
    padding: 10px;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
