<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .dashboard {
            padding: 20px;
        }
        .form-control, .btn {
            margin-bottom: 15px;
        }
        .card-header {
            background-color: #007bff;
            color: white;
        }
        .card-body {
            background-color: #ffffff;
        }
        .form-label {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container-fluid dashboard">
        <div class="row">
            <div class="col-md-3">
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-user-shield"></i> Admin Menu
                    </div>
                    <div class="card-body">
                        <ul class="nav flex-column">
                            <li class="nav-item"><a class="nav-link" href="admin_dashboard.html"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/ajouteProduit"><i class="fas fa-box"></i> Products</a></li>
                            <li class="nav-item" style="background-color: gray; color: white; border-radius: 10px; "><a class="nav-link" href="user_management.html" style="color: white; text-decoration:none;"><i class="fas fa-users"></i> Users</a></li>
                            <li class="nav-item"><a class="nav-link" href="#"><i class="fas fa-cogs"></i> Settings</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-user"></i> Add / Edit User
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="mb-3">
                                <label for="userId" class="form-label">User ID</label>
                                <input type="text" class="form-control" id="userId" value="1" readonly>
                            </div>
                            <div class="mb-3">
                                <label for="userName" class="form-label">Nom Utilisateur</label>
                                <input type="text" class="form-control" id="userName" value="david">
                            </div>
                            <div class="mb-3">
                                <label for="userEmail" class="form-label">Email</label>
                                <input type="email" class="form-control" id="userEmail" value="davidkitoko13@gmail.com">
                            </div>
                            <div class="mb-3">
                                <label for="userPassword" class="form-label">Mot De Passe</label>
                                <input type="password" class="form-control" id="userPassword" value="selemani">
                            </div>
                            <div class="mb-3">
                                <label for="userPhone" class="form-label">Téléphone</label>
                                <input type="text" class="form-control" id="userPhone" value="256774630649">
                            </div>
                            <div class="mb-3">
                                <label for="userDateInscription" class="form-label">Date Inscription</label>
                                <input type="datetime-local" class="form-control" id="userDateInscription" value="2024-06-05T11:20:18">
                            </div>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </form>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header">
                        <i class="fas fa-users"></i> User List
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">

<style>
    .table th,td{
        border: solid gray 1px;
    }
</style>
                            <table class="table table-striped table-hover" border="2" >
                                <thead class="thead-dark">
                                    <tr>
                                        <th scope="col">User ID</th>
                                        <th scope="col">Nom Utilisateur</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Téléphone</th>
                                        <th scope="col">Mot de pass</th>
                                        <th scope="col">Date Inscription</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% users.forEach(function(user) { %>
                                        <tr>
                                          <th scope="row"><%= user.UserID %></th>
                                          <td><%= user.NomUtilisateur %></td>
                                          <td><%= user.Email %></td>
                                          <td><%= user['Téléphone'] %></td>
                                          <td><%= user.MotDePasse %></td>
                                          <td><%= user.DateInscription %></td>
                                          <td>
                                            <a class="btn btn-sm btn-warning" href="/admin/editUtilisateur/<%= user.UserID %>"><i class="fas fa-edit"></i> Edit</a>

                                            <a class="btn btn-sm btn-danger" href="/admin/deleteUtilisateur/<%= user.UserID %>"><i class="fas fa-trash"></i> Delete</a>
                                          </td>
                                        </tr>
                                      <% }); %>
                                </tbody>
                            </table>
                            



                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
